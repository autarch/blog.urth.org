baseURL = "http://blog.urth.org/"
languageCode = "en-us"
defaultContentLanguage = "en"
title = "House Absolute(ly) Pointless"
preserveTaxonomyNames = true
enableRobotsTXT = true
enableEmoji = true
theme = "even"

hasCJKLanguage = false
paginate = 10
googleAnalytics = "UA-1805706-3"
copyright = ""

[author]
  name = "Dave Rolsky"

[sitemap]
  changefreq = "weekly"
  priority = 0.5
  filename = "sitemap.xml"

[[menu.main]]
  name = "Home"
  weight = 10
  identifier = "home"
  url = "/"
[[menu.main]]
  name = "Archives"
  weight = 20
  identifier = "archives"
  url = "/posts/"
[[menu.main]]
  name = "About"
  weight = 20
  identifier = "about"
  url = "/about"

[params]
  version = "4.x"
  debug = false

  since = "2007"

  description = "Unsubstantiated Opinions and Meaningless Blather"

  archivePaginate = 50

  showArchiveCount = true

  dateFormatToUse = "2006-01-02"

